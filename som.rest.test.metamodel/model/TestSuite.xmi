<?xml version="1.0" encoding="UTF-8"?>
<TestSuite xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://example.com/rest/test"
    xsi:schemaLocation="http://example.com/rest/test TestSuite.ecore"
    name="Petsore testsuite"
    description="Simple test suite illustrating the metamodel">
  <testSteps
      xsi:type="Request"
      name="find pets by status"
      httpMethod="GET"
      host="petstore.swagger.io"
      path="/v2/pet/findByStatus"
      scheme="http">
    <headers
        key="Accept">
      <value>application/json</value>
    </headers>
    <parameters
        location="query"
        name="status"
        value="sold"/>
  </testSteps>
  <testSteps
      xsi:type="PropertyTransfer"
      name="transfer petId"
      source="//@testSteps.0"
      sourcePropertyLocation="response"
      sourcePropertyPath="jsonpath"
      target="//@testSteps.2"
      targetPropertyLocation="parameter"
      targetProperty="//@testSteps.2/@parameters.0"
      targetPropertyPath="jsonpath"
      targetPropertyPathValue="$[0].id"/>
  <testSteps
      xsi:type="Request"
      name="delete pet by id"
      httpMethod="DELETE"
      host="petstore.io"
      path="/v2/pet/{petId}"
      scheme="http">
    <parameters
        location="path"
        name="petId"
        value=""/>
    <assertions
        xsi:type="ValidStatusCodesAssertion"
        errorMessage="Valid Status Codes Assertion failed">
      <code>200</code>
    </assertions>
  </testSteps>
</TestSuite>
